<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.franchesco.taxichofer.Activitys.Solicitud">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="440dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/ImgPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/jpnoche" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/person_black"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="200dp"/>

                <TextView
                    android:id="@+id/txtNumPerSol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="205dp"
                    android:layout_marginLeft="215dp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/timer_black" />

                <Button
                    android:id="@+id/btnRechazar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rechazar"
                    android:layout_marginTop="340dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/txtMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lo Sentimos La carrera ya no esta Disponible"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="300dp"
                    android:textColor="@color/colorBlack"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/txtHoraSol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="108dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="205dp"
                    android:text="08:00"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtRefereSol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="160dp"
                    android:text="Referencia"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnAceptar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="280dp"
                    android:text="Aceptar"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtDirSol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/txtDir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="295dp"
                    android:text="Direccion Origen:"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/txtDirOrSol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"/>


        </android.support.v7.widget.CardView>
</RelativeLayout>
