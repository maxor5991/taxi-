<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ImgPerfil"
            android:layout_margin="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/calle"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDniChofer"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/txtReferenciaCN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referencia"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorBlack"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/timer_black"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/txtHoraCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="90dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/person_black"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/txtNumPersoCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="240dp"
            android:layout_marginRight="10dp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>