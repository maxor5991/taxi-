<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.franchesco.taxicliente.Fragments.Natural.ImgPerfilCN">

    <Button
        android:id="@+id/btnSelecImagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/add_photo_white"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnSubirImagen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnSelecImagen"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:background="@drawable/file_upload_white"/>

</RelativeLayout>
